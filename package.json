  "license": "MIT",
  "devDependencies": {
    "@storybook/addon-info": "^3.2.0",
    "@storybook/react": "^3.2.3",
    "@storybook/storybook-deployer": "^2.0.0",
    "babel-cli": "^6.24.1",
    "babel-core": "^6.25.0",
    "babel-jest": "^20.0.3",
    "babel-preset-env": "^1.6.0",
